<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestablecerContrasenaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Email"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="@string/restabler_contra_activity_email"/>

        <Button
            android:id="@+id/button_restablecer_contra"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_reservar_border"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/restablecer_contra_activity_boton"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:onClick="onClick"/>

    </LinearLayout>


</RelativeLayout>