<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:gravity="center"
                    android:id="@+id/button_reservar"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_reservar_border"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:text="@string/detalle_reservar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:layout_marginEnd="4dp"
                    android:drawableStart="@drawable/ic_date_white"
                    />




                <Button
                    android:id="@+id/button_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:drawableStart="@drawable/ic_message_white"
                    android:drawablePadding="10dp"
                    android:paddingStart="30dp"
                    android:background="@drawable/btn_agregar_negocio"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detalle_disponibilidad"
                android:textColor="@color/tabindicatorcolor"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/disponibilidad_imagen"
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/disponibilidad_texto"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabindicatorcolor"
                    android:textSize="18sp"
                    />

            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detalle_descripcion"
                android:textColor="@color/tabindicatorcolor"
                android:textSize="18sp"
                android:textStyle="bold"
                />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/detalle_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tabindicatorcolor"
                android:transitionName="descripcionTransition"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>